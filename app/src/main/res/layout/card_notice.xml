<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/card_notice_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/smallest_margin"
        android:layout_marginRight="@dimen/smallest_margin"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_profile"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/card_notice_profile_image"
                    android:layout_width="@dimen/btn_small"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:layout_margin="@dimen/small_margin"/>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/card_notice_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/primary_text_default_material_light"
                        android:textSize="@dimen/font_small_size"
                        android:text="1"/>


                    <TextView
                        android:id="@+id/card_notice_profile_time"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/primary_text_default_material_light"
                        android:textSize="@dimen/font_small_size"
                        android:text="2"/>


                </LinearLayout>


                <ImageButton
                    android:id="@+id/card_notice_profile_menu"
                    android:layout_width="@dimen/btn_icon"
                    android:layout_height="@dimen/btn_icon"
                    android:background="@android:color/transparent"
                    android:layout_marginRight="@dimen/base_margin"
                    android:scaleType="centerCrop"
                    android:src="@drawable/menu_icon"/>

            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/trans_gray"/>



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/trans_gray"/>


            <TextView
                android:id="@+id/card_notice_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/base_padding"
                android:textColor="@color/primary_text_default_material_light"
                android:minHeight="100dp"
                android:textSize="@dimen/font_small_size"/>



            <LinearLayout
                android:id="@+id/card_notice_image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_profile"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/btn_small"
                    android:layout_height="@dimen/btn_small"
                    android:src="@drawable/good_icon"
                    android:padding="@dimen/base_padding"
                    android:scaleType="centerCrop"/>


                <TextView
                    android:id="@+id/card_notice_good_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_smallest_size"/>


                <ImageView
                    android:layout_width="@dimen/btn_small"
                    android:layout_height="@dimen/btn_small"
                    android:src="@drawable/bad_icon"
                    android:padding="@dimen/base_padding"
                    android:scaleType="centerCrop"/>


                <TextView
                    android:id="@+id/card_notice_bad_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_smallest_size"/>


                <ImageView
                    android:layout_width="@dimen/btn_small"
                    android:layout_height="@dimen/btn_small"
                    android:scaleType="centerCrop"
                    android:padding="@dimen/base_padding"
                    android:src="@drawable/comment_icon"/>


                <TextView
                    android:id="@+id/card_notice_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_smallest_size"/>


            </LinearLayout>




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/trans_gray"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_small"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:id="@+id/card_notice_good_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal">


                    <ImageView
                        android:id="@+id/card_notice_good_btn"
                        android:layout_width="@dimen/btn_small"
                        android:layout_height="@dimen/btn_small"
                        android:src="@drawable/good_icon"
                        android:padding="@dimen/base_padding"
                        android:scaleType="centerCrop"
                        android:background="@android:color/transparent"/>


                    <TextView
                        android:id="@+id/card_notice_good_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/primary_text_default_material_light"
                        android:text="@string/good"
                        android:textSize="@dimen/font_smallest_size"/>



                </LinearLayout>



                <LinearLayout
                    android:id="@+id/card_notice_bad_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">


                    <ImageView
                        android:id="@+id/card_notice_bad_btn"
                        android:layout_width="@dimen/btn_small"
                        android:layout_height="@dimen/btn_small"
                        android:src="@drawable/bad_icon"
                        android:padding="@dimen/base_padding"
                        android:scaleType="centerCrop"
                        android:background="@android:color/transparent"/>


                    <TextView
                        android:id="@+id/card_notice_bad_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/primary_text_default_material_light"
                        android:text="@string/bad"
                        android:textSize="@dimen/font_smallest_size"/>



                </LinearLayout>



                <LinearLayout
                    android:id="@+id/card_notice_comment_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal">


                    <ImageView
                        android:id="@+id/card_notice_comment_btn"
                        android:layout_width="@dimen/btn_small"
                        android:layout_height="@dimen/btn_small"
                        android:src="@drawable/comment_icon"
                        android:padding="@dimen/base_padding"
                        android:scaleType="centerCrop"
                        android:background="@android:color/transparent"/>


                    <TextView
                        android:id="@+id/card_notice_comment_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:text="@string/comment"
                        android:layout_marginRight="@dimen/small_margin"
                        android:textSize="@dimen/font_smallest_size"/>



                </LinearLayout>


            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/card_notice_comment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>