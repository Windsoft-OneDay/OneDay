<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:cardCornerRadius="8dp"
        card:cardBackgroundColor="@color/main">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_small"
            android:orientation="horizontal"
            android:background="@color/main"
            android:gravity="center_vertical">


            <ImageView
                android:layout_width="@dimen/btn_icon"
                android:layout_height="@dimen/btn_icon"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/base_margin"
                android:src="@drawable/submit"/>



            <TextView
                android:id="@+id/custom_dialog_nickname_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_white"
                android:layout_marginLeft="@dimen/base_margin"
                android:textSize="@dimen/font_small_size"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:cardBackgroundColor="#FFFFFF"
        card:cardCornerRadius="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_large"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/btn_small"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/base_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/base_margin"
                    android:layout_marginRight="@dimen/base_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:hint="네임"
                    android:id="@+id/custom_dialog_nickname_nickname"/>


            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/abc_action_bar_default_height_material"
                android:id="@+id/custom_dialog_nickname_submit"
                android:background="@android:color/transparent"
                android:textColor="@color/main"
                android:text="@string/submit"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>